.section
  h3.title.is-3 アカウント登録
  = form_with(model: @user, local: true) do |form|
    = form.hidden_field :provider
    = form.hidden_field :uid
    ul
      li
        = form.label :icon_url, value: @user.icon_url
          .image.is-128x128
            = image_tag(@user.icon_url)
        = form.radio_button :icon_url, @user.icon_url
      li
        = form.label :icon_url, value: 'logo_picks.png'
          .image.is-128x128
            = image_tag('logo_picks.png')
        = form.radio_button :icon_url, 'logo_picks.png'
      li
        = form.label :icon_url, value: 'logo_nurse.png'
          .image.is-128x128
            = image_tag('logo_nurse.png')
        = form.radio_button :icon_url, 'logo_nurse.png'
    .field
      .label
        = form.label :name, 'アカウント名'
    .field
      .control
        = form.text_field :name, class: 'input'
    .field
      .label
        = form.label :url, 'ホームページ(任意)'
    .field
      .control
        = form.text_field :url, class: 'input'
    .control
      = form.submit 'アカウント登録', class: 'button'

= link_to '戻る', root_path
